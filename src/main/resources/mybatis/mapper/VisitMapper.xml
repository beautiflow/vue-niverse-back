<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.vue_niverse.mapper.VisitMapper">
    <update id="plusVisits">
        UPDATE visit_count
        SET visit_count = #{visits}
        WHERE id = 1;
    </update>

    <select id="countVisits" parameterType="com.project.vue_niverse.dto.VisitDto">
        SELECT visit_count
        FROM visit_count
        WHERE id = 1;
    </select>
</mapper>